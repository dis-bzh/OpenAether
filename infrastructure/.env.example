# OpenAether Infrastructure - Environment Configuration Template
# Copy to .env and fill in your values
# Variables can also be set via shell export (takes priority)

# ===========================================
# CLUSTER SETTINGS (shared across environments)
# ===========================================
KUBERNETES_VERSION=v1.35.0
TALOS_VERSION=v1.12.0
CLUSTER_DOMAIN=cluster.local
ENABLE_WIREGUARD=true

# ===========================================
# PULUMI
# ===========================================
PULUMI_CONFIG_PASSPHRASE=

# ===========================================
# PROVIDER CREDENTIALS (shared or per-env)
# ===========================================

# Outscale
OSC_ACCESS_KEY=
OSC_SECRET_KEY=
OSC_REGION=eu-west-2
OSC_INSTANCE_TYPE=tinav5.c2r4p1
OSC_IMAGE_ID=ami-ce7e9d99

# Scaleway
SCW_ACCESS_KEY=
SCW_SECRET_KEY=
SCW_ORGANIZATION_ID=
SCW_PROJECT_ID=
SCW_REGION=fr-par
SCW_ZONE=fr-par-2
SCW_INSTANCE_TYPE=DEV1-M
SCW_SNAPSHOT_ID=c1944499-5f7e-4f27-8770-c324e2cdbad5

# OVH (OpenStack)
OS_AUTH_URL=https://auth.cloud.ovh.net/v3
OS_TENANT_ID=
OS_TENANT_NAME=
OS_USERNAME=
OS_PASSWORD=
OS_USER_DOMAIN_NAME=Default
OVH_REGION=GRA11
OVH_FLAVOR=b2-7
OVH_IMAGE_ID=

# ===========================================
# ENVIRONMENT-SPECIFIC (typically in environments/*.env)
# ===========================================
# CLUSTER_NAME=openaether-{env}
# NODE_DISTRIBUTION=outscale:1:2,ovh:1:1
