cluster_name     = "openaether-prod"
talos_version    = "v1.9.3"
kubernetes_version = "v1.32.1"
cluster_endpoint = "1.2.3.4" # Fallback if no LB is provisioned

# Node Distribution Example
node_distribution = {
  scaleway = {
    control_planes = 1
    workers        = 1
    region         = "fr-par"
    zone           = "fr-par-1"
    instance_type  = "DEV1-M"
    image_id       = "SCW-SNAPSHOT-ID" 
  }
  
  ovh = {
    control_planes = 0
    workers        = 0
    image_id       = "OVH-IMAGE-ID"
  }

  outscale = {
    control_planes = 0
    workers        = 0
    image_id       = "ami-ce7e9d99"
  }
}

# Security Configuration
admin_ip = "YOUR_PUBLIC_IP/32"  # Ex: "80.14.185.25/32"

bastion_ssh_keys = {
  scaleway = "ssh-ed25519 AAAA... user@host"
  # ovh      = "ssh-ed25519 AAAA... user@host"
  # outscale = "ssh-ed25519 AAAA... user@host"
}

# Generic S3 Backup Configuration
# Can be Scaleway Object Storage, AWS S3, MinIO, etc.
backup_s3_endpoint = "https://s3.fr-par.scw.cloud"
backup_s3_region   = "fr-par"
backup_s3_bucket   = "s3-openaether-tfstate"
